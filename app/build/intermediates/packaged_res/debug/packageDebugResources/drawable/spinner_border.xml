<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Umbră subtilă pentru adâncire -->
    <item>
        <shape>
            <solid android:color="#55000000" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Gradient de fundal pentru efect dinamic -->
    <item>
        <shape>
            <gradient
                android:angle="45"
                android:centerColor="#6200EE"
                android:endColor="#3700B3"
                android:startColor="#FF4081"
                android:type="linear" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Border color and thickness -->
    <stroke
        android:width="2dp"
        android:color="#6200EE" />

    <!-- Padding inside the Spinner -->
    <padding
        android:left="8dp"
        android:right="8dp" />
</shape>
