<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/wifi_item_background_2025"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/wifiNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/wi_fi_name"
            android:textColor="@color/wifi_name_text_color_2025"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/wifiSignalStrengthValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/signal_strength"
                android:textColor="@color/wifi_signal_text_color_2025"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/wifiSignalImageView"
                android:layout_width="32dp"
                android:layout_height="32dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wifiDetailsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/wifi_details_background_2025"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="10dp"
        android:paddingEnd="16dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/wifiSsidDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="@string/ssid"
            android:textColor="@color/wifi_detail_text_color_2025"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/wifiSecurityTypeDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="@string/security"
            android:textColor="@color/wifi_detail_text_color_2025"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/wifiMacAddressDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@string/mac_address"
            android:textColor="@color/wifi_detail_text_color_2025"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/wifiBandDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/band"
            android:textColor="@color/wifi_detail_text_color_2025"
            android:textSize="14sp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/signalStrengthChart"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>