<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_2025_v2"
    android:padding="32dp">

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/header_background_speedtest_2025"
        android:paddingHorizontal="32dp"
        android:paddingVertical="16dp"
        android:text="@string/internet_speed_test"
        android:textColor="@color/header_text_color_speedtest_2025"
        android:textSize="28sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDownloadSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/speed_indicator_background_2025"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp"
            android:text="@string/download_speed_mbps"
            android:textColor="@color/text_primary_dark_2025"
            android:textSize="20sp" />


        <Button
            android:id="@+id/btnTestSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:background="@drawable/button_background_accent_2025"
            android:elevation="8dp"
            android:paddingHorizontal="48dp"
            android:paddingVertical="18dp"
            android:stateListAnimator="@null"
            android:text="@string/test_speed"
            android:textColor="@color/button_text_color_light_2025"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>

</RelativeLayout>